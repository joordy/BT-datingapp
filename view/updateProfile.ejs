<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ("components/head.ejs") %>
    <title>Dat.io â€“ Profile</title>
  </head>

  <body class="updateprofile">
    <header>
      <%- include ("components/header-two.ejs") %>
    </header>
    <main>
      <form action="/profile" method="POST" enctype="multipart/form-data">
        <input type="file" name="myImage" accept="image/*" />
        <div>
          <img src="images/users/<%= user.photo%>" alt="" />
          <a href="#"><i class="fas fa-plus-circle"></i></a>
        </div>
        <h2>My profile</h2>
        <section>
          <div>
            <label for="Name">First name:</label>
            <input
              type="text"
              name="firstName"
              value="<%= user.firstName %>"
              placeholder="<%= user.firstName %>"
            />
          </div>
          <div>
            <label for="email">Email:</label>
            <input
              type="text"
              name="email"
              value="<%= user.email %>"
              placeholder="Email"
            />
          </div>
          <div>
            <label for="age">Age:</label>
            <input
              type="number"
              min="18"
              max="99"
              name="age"
              value="<%= user.age %>"
              placeholder="Age"
            />
          </div>
        </section>
        <input type="submit" value="submit profile" />
      </form>
    </main>
    <%- include ("components/footer-p.ejs") %>
  </body>
</html>
